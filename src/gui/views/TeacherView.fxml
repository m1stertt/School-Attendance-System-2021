<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.scene.chart.AreaChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.BoxBlur?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="background" prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/Main.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.TeacherViewController">
   <children>
      <JFXComboBox fx:id="courseComboCheckBox" focusColor="#fbbb2c" layoutX="96.0" layoutY="98.0" minWidth="-Infinity" onAction="#onComboboxSelect" prefWidth="100.0" unFocusColor="#2f4b8f">
         <effect>
            <BoxBlur iterations="0" />
         </effect></JFXComboBox>
      <ImageView fx:id="EASV" fitHeight="80.0" fitWidth="300.0" layoutX="14.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="25.0" AnchorPane.topAnchor="5.0" />
      <Button fx:id="closeTeacher" layoutX="534.0" layoutY="14.0" mnemonicParsing="false" onAction="#logoutTeacher" text="Log Out" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0" />
      <Label layoutX="453.0" layoutY="27.0" text="Teacher" />
      <PieChart fx:id="attendancePieChart" layoutX="33.0" layoutY="356.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="208.0" prefWidth="288.0" title="Overall Class Attendance:" />
      <Label layoutX="60.0" layoutY="118.0" text="Class:" />
      <TableView fx:id="studentsTableView" layoutX="33.0" layoutY="147.0" onMouseClicked="#onStudentSelected" prefHeight="200.0" prefWidth="275.0">
        <columns>
          <TableColumn fx:id="studentFirstName" prefWidth="98.0" text="Firstname" />
            <TableColumn fx:id="studentLastName" prefWidth="78.0" text="Lastname" />
          <TableColumn fx:id="summarizedAttendance" prefWidth="78.0" text="Summ Att." />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <AreaChart fx:id="studentAttendanceChart" layoutX="321.0" layoutY="118.0" prefHeight="422.0" prefWidth="468.0" title="Student Attendance:">
        <xAxis>
          <CategoryAxis side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
      </AreaChart>
      <Label fx:id="currentTime" layoutX="533.0" layoutY="72.0" text="Label" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="55.0" />
      <Button fx:id="moreStudentInfo" layoutX="220.0" layoutY="106.0" mnemonicParsing="false" onAction="#getsStudentInfo" text="Student Info" />
   </children>
</AnchorPane>
